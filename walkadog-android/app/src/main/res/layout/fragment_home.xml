<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="11">

    <TextView
        android:id="@+id/homeFragment_where"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/homeFragment_microDustImg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:paddingTop="20dp"
        app:srcCompat="@drawable/good" />

    <TextView
        android:id="@+id/homeFragment_infor"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:padding="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="~30 좋음"
            android:textColor="#FFFFFF"
            android:background="#54C0EB"
            android:textSize="10dp"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="보통~80"
            android:textColor="#FFFFFF"
            android:background="#90DFAA"
            android:textSize="10dp"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="나쁨~150"
            android:textColor="#FFFFFF"
            android:background="#FFD05B"
            android:textSize="10dp"/>
        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="매우나쁨 151~"
            android:textColor="#FFFFFF"
            android:background="#FD8469"
            android:textSize="10dp"/>
    </LinearLayout>

</LinearLayout>